{
  "incremental": true,
  "indentWidth": 2,
  "typescript": {
    "lineWidth": 160
  },
  "includes": ["**/*.{ts,tsx,js,jsx,json,md,rs,toml}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "./swc_ecma_ast",
    "./swc_ecma_parser",
    "./swc_ecma_ast.json",
    "./swc_ecma_parser.json",
    "**/*.generated.ts",
    "./rs-lib/src/**/*generated.rs",
    "**/testdata",
    "**/target"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.64.2.wasm",
    "https://plugins.dprint.dev/json-0.14.1.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm",
    "https://plugins.dprint.dev/markdown-0.12.2.wasm",
    "https://plugins.dprint.dev/rustfmt-0.3.0.wasm"
  ]
}
